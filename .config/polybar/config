foreground                         = ${colors.foreground}
line-size                          = 1
line-color                         = #f00
border-size                        = 0
border-color                       = #00000000
padding-left                       = 2
padding-right                      = 0
module-margin-left                 = 1
module-margin-right                = 2
font-0                             = FantasqueSansMono NF:weight=Regular:size=11
font-1                             = FantasqueSansMono NF:weight=Regular:size=11
font-2                             = FantasqueSansMono NF:weight=Regular:size=10
;modules-left = xwindow
modules-center                     = i3
;modules-right = filesystem xbacklight volume xkeyboard memory cpu wlan eth battery temperature date powermenu
