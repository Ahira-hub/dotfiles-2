# ----------------------------------------------------------------------------------------------------------------------
# Monitor configuration 2 montiors
# ----------------------------------------------------------------------------------------------------------------------

#workspace "10" output HDMI1
workspace "3:work1" output VIRTUAL1
workspace "4:work2" output VIRTUAL1
workspace "3:work1" output HDMI1
workspace "4:work2" output HDMI1
workspace "2:comm"  output eDP1
workspace "5:media"  output eDP1

set $monitor_config Monitor Config: [g]ui [m]irror [l]eft [r]ight [a]bove [L]eft 4k [R]ight 4k [o]ff
bindsym $mod+m mode "$monitor_config"

mode "$monitor_config" {

    bindsym g exec arandr                        ;mode      "default"
    bindsym m exec ~/.scripts/connect_display.sh --same-as  1     ;mode "default"
    bindsym l exec ~/.scripts/connect_display.sh --left-of  1     ;mode "default"
    bindsym r exec ~/.scripts/connect_display.sh --right-of 1     ;mode "default"
    bindsym a exec ~/.scripts/connect_display.sh --above    0.75  ;mode "default"
    bindsym L exec ~/.scripts/connect_display.sh --left-of  0.75  ;mode "default"
    bindsym R exec ~/.scripts/connect_display.sh --right-of 0.75  ;mode "default"
    bindsym o exec xrandr --output                      HDMI1      --off ;mode "default"

    bindsym Escape mode "default" ;mode    "default"
    bindsym Return mode "default" ;mode    "default"

}


# ----------------------------------------------------------------------------------------------------------------------
# quick edit many config settings
# ----------------------------------------------------------------------------------------------------------------------

set $quick_config Quick Config: [b]ash [v]imrc [i]3 [r]anger [c]onky [p]olybar [x]resources [a]pply
bindsym $mod+c mode "$quick_config"

mode "$quick_config" {

    bindsym b exec $term -e vim ~/bash                                 ;mode "default"
    bindsym v exec $term -e vim ~/.vim/startup                         ;mode "default"
    bindsym i exec $term -e vim ~/.config/i3/config                    ;mode "default"
    bindsym x exec $term -e vim ~/.Xresources                          ;mode "default"
    bindsym c exec $term -e vim ~/.config/conky/pascalwhoop/conky.conf ;mode "default"
    bindsym p exec $term -e vim ~/.config/polybar/config               ;mode "default"
    bindsym r exec $term -e vim ~/.config/ranger/rc.conf               ;mode "default"
    bindsym a exec ~/.config/i3/apply.sh ;mode "default"
    bindsym Escape mode "default"        ;mode "default"
    bindsym Return mode "default"        ;mode "default"

}

